
! HiDPI ----------------------------------------------------------------------
!Xft.dpi: 192
!Xft.autohint: 0
!Xft.lcdfilter:  lcddefault
!Xft.hintstyle:  hintfull
!Xft.hinting: 1
!Xft.antialias: 1
!Xft.rgba: rgb

! xscreensaver ---------------------------------------------------------------

!font settings
xscreensaver.Dialog.headingFont:        -*-dina-bold-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-dina-bold-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-dina-bold-r-*-*-10-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)

xscreensaver.Dialog.foreground:         #ffffff
xscreensaver.Dialog.background:         #000000
xscreensaver.Dialog.topShadowColor:     #000000
xscreensaver.Dialog.bottomShadowColor:  #000000
xscreensaver.Dialog.Button.foreground:  #666666
xscreensaver.Dialog.Button.background:  #ffffff
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #666666
xscreensaver.Dialog.text.background:    #ffffff
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        20
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #666666
xscreensaver.passwd.thermometer.background:  #000000
xscreensaver.passwd.thermometer.width:       8

! Urxvt ---------------------------------------------------------------

URxvt.font:           xft:bitstream vera sans mono:size=12:antialias=true
URxvt.boldFont:       xft:bitstream vera sans mono:bold:size=12:antialias=true
URxvt.italicFont:     xft:bitstream vera sans mono:size=12:antialias=true
URxvt.boldItalicFont: xft:bitstream vera sans mono:bold:size=12:antialias=true

Rxvt.imLocale: en_GB.UTF-8

URxvt*depth: 32
URxvt*background: rgba:0000/0000/0200/c800

! URxvt.letterSpace:  -6
URxvt.geometry:     90x25
URxvt.scrollBar:    false
Urxvt*scrollTtyOutput : false
URxvt*scrollWithBuffer: true
Urxvt*scrollTtyKeypress: true
Urxvt.secondaryScreen: 1
Urxvt.secondaryScroll: 0
Urxvt.internalBorder: 10

URxvt.cursorColor:  #f9f9f9
URxvt.pointerColor: #f9f9f9
! URxvt.background:   #080808
URxvt.foreground:   #A5A5A5
URxvt.transparent:   true
URxvt.shading:       20

URxvt.color0:       #080808
URxvt.color1:       #F51024
URxvt.color2:       #4e9a06
URxvt.color3:       #C4A000
URxvt.color4:       #254775
URxvt.color5:       #75507B
URxvt.color6:       #06989A
URxvt.color7:       #A5A5A5
URxvt.color8:       #555753
URxvt.color9:       #FF4444
URxvt.color10:      #73FF00
URxvt.color11:      #FCE94F
URxvt.color12:      #4A84D8
URxvt.color13:      #AD7FA8
URxvt.color14:      #34E2E2
URxvt.color15:      #EEEEEC

! disable Picture insert mode
URxvt.iso14755: false
URxvt.iso14755_52: false
