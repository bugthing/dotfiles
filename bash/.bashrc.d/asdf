# asdf - multiple language switcher

if [ -f "$HOME/.nix-profile/share/asdf-vm/asdf.sh" ]; then
  source "$HOME/.nix-profile/share/asdf-vm/asdf.sh"
fi

if [ -f "$HOME/.nix-profile/share/bash-completion/completions/asdf.bash" ]; then
 source "$HOME/.nix-profile/share/bash-completion/completions/asdf.bash"
fi

# asdf java - set JAVA_HOME
if [ -f "$HOME/.asdf/plugins/java/set-java-home.bash" ]; then
  source "$HOME/.asdf/plugins/java/set-java-home.bash"
fi

